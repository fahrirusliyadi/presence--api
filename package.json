{
  "name": "presence-api",
  "version": "1.0.0",
  "description": "Presence API with Express and TypeScript",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "nodemon": "^2.0.22",
    "prettier": "3.5.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "typescript-eslint": "^8.29.0"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*": "prettier --ignore-unknown --write"
  }
}
